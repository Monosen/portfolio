---
import Navbar from "../components/custom/navbar/Navbar.astro";
import Normalize from "normalize.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="./Normalize.style.css" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --black: #000000;
    --white: #ffffff;
    --fondo: #111;
    --fondoTwo: #191919;
    --pink: #ffc4ff;

    --fuenteOne: "Bogart-Medium", "Roboto", sans-serif;
    --fuenteTwo: "Biotif-Medium", sans-serif;
  }

  @font-face {
    font-family: Bogart-Medium;
    src: url("../assets/fonts/Bogart-Medium-trial.ttf") format("truetype");
  }

  @font-face {
    font-family: Biotif-Medium;
    src: url("../assets/fonts/Biotif-Medium.ttf") format("truetype");
  }
  html {
    font-size: 62.5%;
    box-sizing: border-box;
  }

  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  body,
  html {
    font-family: var(--fuenteOne);
    background-color: var(--fondo);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  i {
    color: var(--white);
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    font-family: var(--fuenteOne);
    font-weight: 500;
    color: var(--white);
  }

  a,
  button,
  h6,
  input,
  li,
  p {
    font-family: var(--fuenteTwo);
    color: var(--white);
  }
</style>
